<td>
  <% if book.favorited_by?(current_user) %>
    <p>
    <%= link_to book_favorites_path(:book_id=>book.id), method: :delete ,remote: true, class: "glyphicon glyphicon-heart" do %>
     ♥<%= @book.favorites.count %>いいね
    <% end %>
    </p>
  <% else %>
     <p>
     <%= link_to book_favorites_path(:book_id=>book.id), method: :post ,remote: true, class: "glyphicon glyphicon-heart-empty" do %>
      ♡<%= @book.favorites.count %> いいね
     <% end %>
     </p>
  <% end %>
 </td>